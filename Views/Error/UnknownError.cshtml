@{
    ViewData["Title"] = "Unexpected Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
</head>
<body>
<div class="container text-center mt-5">
    <h1 class="text-warning">An Unexpected Error Occurred</h1>
    <p>We’re not sure what happened. Please try again or contact support if the problem persists.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Return Home</a>
</div>
</body>
</html>