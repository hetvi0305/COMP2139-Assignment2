@model COMP2139_Assignment1.Models.Order

@{
    ViewBag.Title = "Delete Order";
    Layout = "_Layout";
}

<h2>Delete Order</h2>

<h4>Are you sure you want to delete this order?</h4>

<div>
    <h5>Order ID: @Model.Id</h5>
    <p><strong>Guest Name:</strong> @Model.GuestName</p>
    <p><strong>Guest Email:</strong> @Model.GuestEmail</p>
    <p><strong>Status:</strong> @Model.OrderStatus</p>
    <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>

    <h5>Items:</h5>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>@item.Product!.Name (Qty: @item.Quantity)</li>
        }
    </ul>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>